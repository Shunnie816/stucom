<div class="posts-edit">
    <div class="container">
    <h2>投稿内容を編集する</h2>
        <%= form_tag("/posts/#{@post.id}/update") do %>
        <div class="posts-box">
            <% @post.errors.full_messages.each do |message| %>
            <div class="error-message">
                <%= message %>
            </div>
            <% end %>
            <textarea name="content"><%= @post.content %></textarea>
            <input type="submit" value="保存">
        </div>
        <% end %>
    </div>
</div>