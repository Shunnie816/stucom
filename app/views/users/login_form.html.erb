<div class="login">
    <div class="container">
    <h2>ログイン</h2>
        <div class="form-box">
        <%= form_tag("/login") do %>
            <% if @error_message %>
            <div class="error-message">
            <%= @error_message %>
            </div>
            <% end %>
            <p>メールアドレス</p>
            <input class="register-form" name="email" value="<%= @email %>">
            <p>パスワード</p>
            <input class="register-form" type="password" name="password" value="<%= @password %>">
            <input class="btn" type="submit" value="ログイン">
            <div class="clear"></div>
        <% end %>
        </div>
    </div>
</div>